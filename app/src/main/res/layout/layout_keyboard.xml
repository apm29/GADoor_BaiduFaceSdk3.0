<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <EditText
        android:id="@+id/tv_key_code"
        android:minHeight="60dp"
        android:gravity="center"
        android:enabled="false"
        android:focusable="false"
        android:background="@color/white"
        android:textColor="@color/black"
        tools:text="123"
        android:inputType="numberPassword"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_code_7"
            style="@style/DigitalButton"
            android:text="7" />

        <Button
            android:id="@+id/btn_code_8"
            style="@style/DigitalButton"
            android:text="8" />

        <Button
            android:id="@+id/btn_code_9"
            style="@style/DigitalButton"
            android:text="9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_code_4"
            style="@style/DigitalButton"
            android:text="4" />

        <Button
            android:id="@+id/btn_code_5"
            style="@style/DigitalButton"
            android:text="5" />

        <Button
            android:id="@+id/btn_code_6"
            style="@style/DigitalButton"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_code_1"
            style="@style/DigitalButton"
            android:text="1" />

        <Button
            android:id="@+id/btn_code_2"
            style="@style/DigitalButton"
            android:text="2" />

        <Button
            android:id="@+id/btn_code_3"
            style="@style/DigitalButton"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_code_delete"
            style="@style/DigitalButton"
            android:text="删除"
            android:textColor="#ffff0000" />

        <Button
            android:id="@+id/btn_code_0"
            style="@style/DigitalButton"
            android:text="0" />


        <Button
            android:id="@+id/btn_code_confirm"
            style="@style/DigitalButton"
            android:text="确定"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>